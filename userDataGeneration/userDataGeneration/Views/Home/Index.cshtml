@model List<UserViewModel>
@{
    ViewData["Title"] = "Home Page";
}
<h1>Fake User Data Generator</h1>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Home" asp-action="Index" novalidate="novalidate" method="get" id="form">
                <div class="form-group">
                    <label for="region">Region</label>
                    <select id="region" name="region" class="form-control">
                        <option value="pl">en</option>
                        <option value="us">it</option>
                        <option value="ge">es</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="errorRate">Error Rate</label>
                    <input id="errorRate" name="errorRate" type="range" min="0" max="10" step="0.1" class="form-control-range" />
                    <input id="errorRateNumber" name="errorRateNumber" type="number" min="0" max="1000" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="seed">Seed</label>
                    <input id="seed" name="seed" type="number" min="0" class="form-control" />
                    <button id="random" type="submit" class="btn btn-primary">Random</button>
                </div>
            </form>
        </div>
        <div class="col-md-8">
            <table id="table" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Index</th>
                        <th>Random Id</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Phone</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var user in Model)
                        {
                            <tr class="tr-shadow text-dark">
                                <td class="text-start px-sm-1">
                                    <span class="fw-bold">@user.Index</span>
                                </td>
                                <td class="text-start">
                                    <span class="fw-bold px-sm-0 text-gray-500">@user.RandomId</span>
                                </td>
                                <td class="text-start">
                                    <span class="fw-bold text-gray-500">@user.Address</span>
                                </td>
                                <td class="text-start">
                                    <span class="fw-bold px-sm-0 text-gray-500">@user.Name</span>
                                </td>
                                <td class="text-start">
                                    <span class="fw-bold text-gray-500">@user.Phone</span>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
